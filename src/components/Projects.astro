---
import Nextjs from "./icons/Nextjs.astro";
import Tailwind from "./icons/Tailwindcss.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: Nextjs,
  },
  TAILWIND: {
    name: "Tailwindcss",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
};

const PROJECTS = [
  {
    title: "Olympuz",
    description:
      "Olympuz is a fitness brand that offers customized workout plans, premium gym apparel, and top-tier training facilitiesâ€”built for a relentless community committed to discipline and results. The project was built with Next.js, React, Javascript, Typrscript, and Tailwindcss.",
    link: "#",
    github: "https://github.com/cesarandre940/olympuz-next",
    image: "/projects/mockup2.png",
    tags: [TAGS.NEXT, TAGS.TAILWIND ],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-blue-400 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2 ">
        {tags.map((tag) => (
          <li>
            <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
            <tag.icon class="size-4"/>
            {tag.name}
        </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-blue-400"
        src={image}
        alt={`Captura de pantalla del proyecto`}
      />
    </article>
  ))
}
